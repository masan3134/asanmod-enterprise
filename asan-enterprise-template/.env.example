# ASANMOD Enterprise Template - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE (REQUIRED)
# ============================================
# Must be a valid PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# ============================================
# AUTHENTICATION (REQUIRED)
# ============================================
# Must be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET="change-me-in-production-use-openssl-rand-base64-32"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# ============================================
# ADMIN USER (for create-admin script)
# ============================================
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="changeme123"


# Example: postgresql://myuser:mypass@localhost:5432/mydb

# ============================================
# API CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL="http://localhost:3001/api"
# Production: https://your-domain.com/api

# ============================================
# AUTHENTICATION (if using NextAuth.js)
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# ============================================
# EXTERNAL SERVICES
# ============================================

# Email (e.g., SendGrid, Resend)
EMAIL_FROM="noreply@your-domain.com"
EMAIL_SERVER="smtp://user:pass@smtp.example.com:587"

# Storage (e.g., S3, MinIO)
# S3_BUCKET="your-bucket-name"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY="your-access-key"
# S3_SECRET_KEY="your-secret-key"

# Analytics (e.g., Google Analytics)
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Error Tracking (e.g., Sentry)
# SENTRY_DSN="https://xxx@sentry.io/xxx"

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV="development"  # development | production
PORT=3000

# basePath (if serving from subdirectory)
# NEXT_PUBLIC_BASE_PATH="/admin"

# ============================================
# FEATURE FLAGS
# ============================================
# FEATURE_NEW_DASHBOARD="true"
# FEATURE_BETA_API="false"
