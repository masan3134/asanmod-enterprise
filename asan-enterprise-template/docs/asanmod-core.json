  "network": {
    "dev": {
      "frontend": 3000,
      "backend": 3001,
      "binding": "0.0.0.0"
    },
    "prod": {
      "frontend": 3002,
      "backend": 3003,
      "binding": "127.0.0.1"
    }
  },

  "database": {
    "dev": {
      "name": "[PROJECT]_dev_db",
      "host": "localhost",
      "port": 5432,
      "user": "[DB_USER]"
    },
    "prod": {
      "name": "[PROJECT]_prod_db",
      "host": "localhost",
      "port": 5432,
      "user": "[DB_USER]"
    }
  },

  "credentials": {
    "dev": {
      "admin": { "email": "admin@example.com", "password": "See .env file" }
    }
  },

  "scripts": {
    "core": {
      "pm2Wrapper": "scripts/mod-tools/pm",
      "deployProd": "scripts/mod-tools/deploy-prod.sh",
      "preFlight": "scripts/mod-tools/pre-flight.cjs"
    }
  },

  "constraints": {
    "commitFormat": {
      "pattern": "^(feat|fix|docs|style|refactor|test|chore)(\\(.+\\))?: .+",
      "example": "feat(auth): add login validation",
      "enforcer": ".husky/commit-msg"
    }
  },

  "rules": {
    "zeroTolerance": true,
    "language": "ENGLISH"
  },

  "paths": {
    "project": ".",
    "scripts": "scripts/mod-tools/",
    "docs": "docs/"
  },

  "files": {
    "agentProtocol": "GEMINI.md",
    "quickRef": "docs/AGENT_QUICK_REF.md",
    "readme": "README.md"
  },

  "_meta": {
