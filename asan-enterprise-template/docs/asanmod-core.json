{
  "version": "1.0.0",
  "name": "ASANMOD Enterprise Template",
  "lastUpdated": "2026-01-13T00:00:00Z",
  "description": "Production-ready SaaS template configuration",

  "network": {
    "dev": {
      "frontend": 3000,
      "backend": 3001,
      "binding": "0.0.0.0"
    },
    "prod": {
      "frontend": 3002,
      "backend": 3003,
      "binding": "127.0.0.1"
    }
  },

  "database": {
    "dev": {
      "name": "app_dev_db",
      "host": "localhost",
      "port": 5432,
      "user": "postgres",
      "connectionString": "postgresql://postgres:password@localhost:5432/app_dev_db"
    },
    "prod": {
      "name": "app_prod_db",
      "host": "localhost",
      "port": 5432,
      "user": "postgres",
      "connectionString": "postgresql://postgres:password@localhost:5432/app_prod_db"
    }
  },

  "scripts": {
    "v10": {
      "stateManager": "scripts/mod-tools/state-manager-v10.cjs",
      "interactionGuard": "scripts/mod-tools/interaction-guard.cjs",
      "decisionLogger": "scripts/mod-tools/decision-logger.cjs",
      "checkpoint": "scripts/mod-tools/checkpoint.cjs",
      "dashboard": "scripts/mod-tools/v10-dashboard.cjs"
    },
    "core": {
      "pm2Wrapper": "scripts/mod-tools/pm",
      "envHelper": "scripts/mod-tools/env-helper.cjs",
      "verifyCore": "scripts/mod-tools/verify-core.cjs",
      "deployProd": "scripts/mod-tools/deploy-prod.sh",
      "fastVerify": "scripts/mod-tools/fast-verify.sh"
    }
  },

  "constraints": {
    "commitFormat": {
      "pattern": "^ID: [A-Z0-9-]+ \\| .+",
      "example": "ID: FEAT-001 | Added login page",
      "enforcer": ".husky/commit-msg"
    },
    "consoleLogBan": {
      "scope": "src/**/*.ts",
      "enforcer": ".husky/pre-commit"
    },
    "stateTTL": {
      "minutes": 30,
      "enforcer": "verify-core.cjs"
    },
    "interactionThreshold": {
      "lines": 50,
      "criticalFiles": ["package.json", ".env.prod", "ecosystem.config.js"]
    }
  },

  "rules": {
    "zeroTolerance": true,
    "nativePm2": true,
    "noDockerHostnamesInProd": true,
    "surgicalVerify": true
  },

  "paths": {
    "project": ".",
    "backend": "src/",
    "frontend": "src/",
    "scripts": "scripts/mod-tools/",
    "state": ".asanmod/state/",
    "logs": ".asanmod/logs/",
    "checkpoints": ".asanmod/checkpoints/"
  },

  "files": {
    "agentProtocol": "docs/GHOST_DEV_PROTOCOL.md",
    "quickRef": "docs/AGENT_QUICK_REF.md",
    "cursorRules": ".cursorrules",
    "readme": "README.md"
  },

  "_meta": {
    "schema": "1.0.0",
    "generator": "ASANMOD Template v1.1.1",
    "note": "This file is the Single Source of Truth for ASANMOD automation."
  }
}
